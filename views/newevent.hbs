<p>You are {{username}}</p>

<br />

<form method="POST" style="margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>Make an event!</h3>
  <div class="form-group">
    <label>Event name</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label>Your name/organization</label>
    <input type="text" name="organizer" class="form-control">
  </div>
  <div class="form-group">
    <label>When</label>
    <input type="date" name="date" class="form-control">
  </div>
  <div class="form-group">
    <label>Where</label>
    <input type="text" name="location" class="form-control">
  </div>
  <div class="form-group">
    <label>Description</label>
    <input type="text-area" name="description" class="form-control">
  </div>
  <div class="form-group">
    <label>Cause</label>
    <input type="text" name="cause" class="form-control">
  </div>
  <div class="form-group">
    <input type="radio" name="private" value="true" checked> Private<br>
    <input type="radio" name="private" value="false"> Public<br>
  </div class="form-group">
  <div class="form-group">
    <button class="btn btn-success">Create</button>
  </div>
</form>
