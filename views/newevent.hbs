<p>You are {{username}}</p>

<br />

<form method="POST" style="max-width: 600px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>Make an event!</h3>
  <div class="form-group">
    <label>Event name</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label>Your name/organization</label>
    <input type="text" name="organizer" class="form-control">
  </div>
  <div class="form-group">
    <label>When</label>
    <input type="date" name="date" class="form-control">
  </div>
  <div class="form-group">
    <label>Where</label>
    <input type="text" name="location" class="form-control">
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea type="text-area" name="description" class="form-control"></textarea>
  </div>
  <div class="form-group">
    <label>Cause</label>
    <input type="text" name="cause" class="form-control">
  </div>
  <div class="form-group">
    <input type="radio" name="private" value="true" checked> <label>Private</label><br>
    <input type="radio" name="private" value="false"> <label>Public</label><br>
  </div class="form-group">
  <div class="form-group">
    <label>Measurement of success</label><br>
    <select name="measurement">
      <option value="miles">Miles</option>
      <option value="kilometers">Kilometers</option>
      <option value="laps">Laps</option>
      <option value="points">Points</option>
      <option value="shots">Shots</option>
      <option value="goals">Goals</option>
    </select>
  </div>
  <div class="form-group">
    <button class="btn btn-success">Create</button>
  </div>
</form>
